{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flutter: Build Debug",
            "type": "shell",
            "command": "flutter",
            "args": [
                "build",
                "apk",
                "--debug"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Flutter: Run Debug",
            "type": "shell",
            "command": "flutter",
            "args": [
                "run",
                "--debug"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}